# Defaults for editor applications
#
# https://EditorConfig.org

# Specifies that this is the top-level EditorConfig
root = true

# Defaults for every type of file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{Dockerfile, *.dockerfile}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.js]
indent_style = space
indent_size = 2
max_line_length = 88

[*.json]
indent_style = space
indent_size = 4
max_line_length = 88

# Makefiles require tab indentation
[{Makefile, *.mk}]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false

[*.toml]
indent_style = space
indent_size = 2
max_line_length = 88
 
[*.ts]
indent_style = space
indent_size = 4
max_line_length = 88
